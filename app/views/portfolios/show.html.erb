<div class="container portfolio-container">
  <div class="row">
    <div class="col-md-7">
      <%= image_tag portfolio_img(@portfolio.main_image), width: '100%' unless @portfolio.main_image.nil? %>
    </div>
    
    <div class="col-md-5">
      <h1><%= @portfolio.title %></h1>
      <i><%= @portfolio.subtitle %></i>
      <p><%= @portfolio.body %></p>

      <h2>Technologies used:</h2>

      <% @portfolio.technologies.each do |t| %>
        <p><%= t.name %></p>
      <% end %>
    </div>
  </div>
</div>